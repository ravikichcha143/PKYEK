package com.codedrunks.components.flash{	import fl.controls.listClasses.ICellRenderer;	import fl.controls.listClasses.ImageCell;		import flash.text.AntiAliasType;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;		public class FriendsItemRenderer extends ImageCell implements ICellRenderer	{		private var friendText:TextField;		private var friendImage:Image; 				public function FriendsItemRenderer()		{			super();						setStyle("upSkin", CustomCellBg);			setStyle("downSkin", CustomCellBg);			setStyle("overSkin", CustomCellBgOver);						setStyle("selectedUpSkin", CustomCellBgSelected);			setStyle("selectedDownSkin", CustomCellBgSelected);			setStyle("selectedOverSkin", CustomCellBgSelected); 					friendImage = new Image();			friendImage.width = 120;			friendImage.height = 45;			friendImage.y = 3;						friendText = new TextField();			friendText.autoSize = TextFieldAutoSize.LEFT;			//title.defaultTextFormat = styles.Arial_11_white;			friendText.antiAliasType = AntiAliasType.ADVANCED;			//title.embedFonts = StyleManager.getStyle("embedFonts");			//friendText.x = 2;			//friendText.y = this.height - 15;			friendText.width = 80;			friendText.height = 15;			friendText.multiline = true;			friendText.wordWrap = true;			friendText.selectable = false;						var tf:TextFormat = new TextFormat();			tf.font = "Verdana";			tf.color = 0xFFFFFF;						friendText.setTextFormat(tf);						addChild(friendImage);			addChild(friendText);		}						override protected function drawLayout():void		{			trace("data text",data.text);			//friendText.text = data.text;			background.width = width;			background.height = height;			friendImage.source = data.imgSource;			textField.text = data.text;			textField.x = 2;			textField.y = friendImage.height + 2;			var tf:TextFormat = new TextFormat();			tf.font = "Verdana";			tf.color = 0xFFFFFF;			tf.align = "center";						textField.setTextFormat(tf);			textField.width = 125;			textField.height = 18;			//textField.setStyle("textAlign","center");			textField.visible = true;		}	}}